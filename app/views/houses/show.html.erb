<p id="notice"><%= notice %></p>

<div class="header">
  <h1>閲覧</h1>
</div>

<div class="main">
  <p>
    <strong>物件名:</strong>
    <%= @house.name %>
  </p>

  <p>
    <strong>家賃:</strong>
    <%= @house.hire %>
  </p>

  <p>
    <strong>住所:</strong>
    <%= @house.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @house.age %>
  </p>

  <p>
    <strong>備考:</strong>
    <%= @house.remaks %>
  </p>

  <hr>

  <div class="stations">
    <% @house.nearest_stations.each_with_index do |station,index|%>
      <div class="station">
        <h4>最寄り駅<%=index+1%></h4>
        <div>
          <p>
            <strong>路線名:</strong>
            <%= station.route_name %>
          </p>
          <p>
            <strong>駅名:</strong>
            <%= station.station_name %>
          </p>
          <p>
            <strong>徒歩分数:</strong>
            <%= station.minute_walk %>分
          </p>
        </div>
      </div>
    <% end%>
  </div>

  <%= link_to '編集', edit_house_path(@house) %> |
  <%= link_to '戻る', houses_path %>

</div>
